{
  "name": "@monorepo/server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -r dotenv/config -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "start": "yarn build && node -r dotenv/config dist/main/server.js",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -p tsconfig-build.json && yarn copy:handlebars",
    "build:watch": "yarn clean && tsc -p tsconfig-build.json -w",
    "createdb": "npx sequelize-cli db:create",
    "migratedb": "npx sequelize-cli db:migrate",
    "seeddb": "npx sequelize-cli db:seed:all",
    "check": "npm-check -s -u",
    "copy:handlebars": "cp -rv src/infra/messages/templates dist/infra/messages/templates"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@monorepo/logger": "*",
    "@monorepo/validation": "*",
    "@sendgrid/mail": "^7.7.0",
    "@types/node-schedule": "^2.1.0",
    "aes-js": "^3.1.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "node-schedule": "^2.1.0",
    "nodemon": "^2.0.19",
    "notyf": "^3.10.0",
    "sequelize": "^6.21.3",
    "twilio": "^3.77.1",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/aes-js": "^3.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
